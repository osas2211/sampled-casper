# The environment to use `development`, `testing`, `staging`, `production`
APP_ENV=development

# Casper Network Configuration
VITE_CASPER_NETWORK=testnet
VITE_CASPER_RPC_URL=https://rpc.testnet.casperlabs.io/rpc
VITE_CASPER_CHAIN_NAME=casper-test

# Contract Configuration (update after deployment)
VITE_CONTRACT_HASH=
VITE_CONTRACT_PACKAGE_HASH=

# Pinata IPFS Configuration
VITE_PINATA_GATEWAY_URL=your-gateway.mypinata.cloud
VITE_PINATA_API_KEY=your-api-key
VITE_PINATA_API_SECRET=your-api-secret
VITE_PINATA_JWT_SECRET=your-jwt-secret

